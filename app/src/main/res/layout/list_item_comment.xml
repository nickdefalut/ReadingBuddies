<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@id/iv_book"
        android:text="123444"
        android:layout_marginLeft="10dp"/>

    <TextView android:id="@+id/tv_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_book_name"
        android:layout_toRightOf="@id/iv_book"
        android:text="sisflsddfjslda"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_reader"
        android:layout_toRightOf="@id/iv_book"
        android:text="qwersdweqopriwqeopri weqpoi rkdfldsakfj lsa fsafdsaf sdasafsaf"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_book"
        android:text="faskfhfsakjhfksadjhfkdsajhfskdajhfisaudhf ksadjhf ksjadhfksa"/>

</RelativeLayout>


